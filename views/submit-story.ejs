<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Submit Story</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">
      Record a new story from your adventures!<br />Fill the form to get
      started.
    </p>
  </div>
</div>

<div class="row justify-content-center">
  <!-- infoSubmit message will show if POST has succeeded -->
  <% if(infoSubmitObj != '') { %>
  <div class="col-8 alert alert-success" role="alert"><%= infoSubmitObj %></div>
  <% } %>

  <!-- infoErrors message will show if POST has failed -->
  <% if(infoErrorsObj != '') { %>
  <div class="col-8 alert alert-danger" role="alert">
    <%= infoErrorsObj[0].message %>
  </div>
  <% } %>

  <div class="col-8">
    <form
      action="/admin/submit-story"
      enctype="multipart/form-data"
      method="POST"
    >
      <div class="col-12">
        <label for="name" class="form-label">Story Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          required
        />
      </div>

      <div class="row g-3">
        <div class="col-12">
          <label for="date" class="form-label">Date</label>
          <input type="date" name="date" id="date" class="form-control" />
        </div>

        <div class="col-12">
          <label for="game">Game</label>
          <select
            class="form-select form-control"
            name="game"
            aria-label="game"
          >
            <option selected>Select Game</option>
            <!-- value is dependant on our enum options in the game field for the story model -->
            <option value="The Elder Scrolls V: Skyrim">
              The Elder Scrolls V: Skyrim
            </option>
            <option value="Monster Hunter World">Monster Hunter World</option>
            <option value="Cyberpunk 2077">Cyberpunk 2077</option>
            <option value="Elden Ring">Elden Ring</option>
            <option value="Soul Calibur 6">Soul Calibur 6</option>
            <option value="Fallout 4">Fallout 4</option>
            <option value="Baldur's Gate III">Baldur's Gate III</option>
            <option value="Pathfinder: Wrath of the Righteous">
              Pathfinder: Wrath of the Righteous
            </option>
          </select>
        </div>

        <div class="col-12">
          <label for="image">Story Image</label>

          <!-- accepts all image types, /* means all -->
          <input
            type="file"
            class="form-control"
            name="image"
            accept="image/*"
          />
        </div>

        <div class="col-12">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            id="description"
            class="form-control"
            cols="30"
            rows="4"
          ></textarea>
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Submit Story</button>
        </div>
      </div>
    </form>
  </div>
</div>
