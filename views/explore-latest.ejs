<h1 class="pb-4"> Explore Latest</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if (story !== '') { %>
        <% story.forEach(function(story, index) { %>
            <a href="/story/<%= story._id %>" class="col text-center game__link">
                <div class="game__img game__img--large storybook">
                    <img src="/img/book.png" alt="storybook" />
                    <img
                      src="/uploads/<%= story.image %>"
                      class="open-book"
                      alt="storybook hover"
                      style="width:100%;height:100%"
                    />
                  </div>
            <div class="pt-1"><%= story.name %></div>
            </a>
        <% }) %>
        <% } else { %>
            <p>No Items Found.</p>
        <% } %>
</div>